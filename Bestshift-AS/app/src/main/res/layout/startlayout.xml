<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/myanimation"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1" android:background="@drawable/bg">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11" android:src="@drawable/bestshift"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_marginTop="40dp"
            android:layout_alignParentRight="true"/>
    <ImageView
            android:layout_width="85dp"
            android:layout_height="105dp"
            android:id="@+id/imageView2"
            android:background="@drawable/bestshifticon"
            android:layout_below="@+id/imageView11" android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Starten"
            android:id="@+id/button"
            android:background="@drawable/bg" android:textSize="30dp"
            android:textColor="#000000"
            android:layout_below="@+id/imageView2" android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright BestShift Inc. 2015"
            android:id="@+id/textView" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/imageView2" android:textColor="#000000"/>

</RelativeLayout>