<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:id="@+id/weiterausfuehren" android:background="#53ff1e">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fahrt fortsetzen"
                android:id="@+id/textView7" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/weiterausfuehren"
            android:layout_alignParentLeft="true" android:background="#ff3f4a" android:id="@+id/stoppen">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fahrt beenden"
                android:id="@+id/textView6" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>
    </RelativeLayout>
</RelativeLayout>