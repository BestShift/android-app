<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bak"
                android:background="#fdfdff">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
        android:id="@+id/zubesh"
            android:layout_alignParentLeft="true"
        android:layout_above="@+id/main_txt_currenttemp">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linechartkommfort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/zukammscher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/zukammscher"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zum Kreis"
                android:id="@+id/butonzumkreis" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="to Beschleunigungskraefte"
            android:id="@+id/zubeschleunigungskraefte"
        android:textColor="#2549ff" android:textSize="25dp" android:textIsSelectable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/zubesh" />

    <TextView
        android:id="@+id/main_txt_currenttemp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@null"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right" />

</RelativeLayout>