<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bak"
                android:background="#fdfdff">

    <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true" android:id="@+id/zukamsh">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Kammsher-kreis"
                android:id="@+id/textView2" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
                android:textColor="#6959ff" android:textSize="25dp" android:textIsSelectable="false"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp" android:layout_below="@+id/zukamsh"
            android:id="@+id/zubesh"
            android:layout_alignParentLeft="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Beschleunigungskraefte"
                android:id="@+id/textView5" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
                android:textColor="#2549ff" android:textSize="25dp" android:textIsSelectable="true"/>
    </RelativeLayout>
</RelativeLayout>